rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    // User-scoped files (private per-uid).
    match /users/{uid}/{allPaths=**} {
      allow read, write: if isOwner(uid);
    }

    // App/catalog icons used by the UI (read-only for authenticated users).
    match /heroes_icons/{allPaths=**} {
      allow read: if signedIn();
      allow write: if false;
    }

    match /location_icons/{allPaths=**} {
      allow read: if signedIn();
      allow write: if false;
    }

    match /styl_icons/{allPaths=**} {
      allow read: if signedIn();
      allow write: if false;
    }

    match /cms_uploads/{allPaths=**} {
      allow read: if signedIn();
      allow write: if false;
    }

    // Single final catch-all (no global open access).
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
